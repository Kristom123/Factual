<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
        integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
</head>


<body>


<% claims.forEach(function(claim){ %>

<form action="save" method ="post">

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title"><%= claim.text %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= claim.claimant %></h6>
        <p class="card-text">  <%= claim %>  </p>
        <a href="<%= claim.claimReview[0].url %>"  class="card-link">View article</a>
        <input type="hidden" name="article" value=  <%= claim.text %> >
        
        <button type="submit">save article</button>
    </div>
</div>

</form>

<% }) %>


</body>

</html>